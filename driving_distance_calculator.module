/**
 * Implements hook_help().
 */
function driving_distance_calculator_help($route_name, $route_match) {
  switch ($route_name) {
    case 'help.page.driving_distance_calculator':
      return t('Provides driving distance calculations using an external routing service. Configure at @settings.', [
        '@settings' => \Drupal\Core\Url::fromRoute('driving_distance_calculator.settings')->toString(),
      ]);
  }
}
